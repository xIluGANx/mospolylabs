<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Заметки" Height="450" Width="800" Closing="Window_Closing">
    <Grid>
        <ComboBox x:Name="ColorComboBox" SelectionChanged="ColorComboBox_SelectionChanged" Width="100" Height="30" Margin="10">
            <ComboBoxItem Content="Белый" Tag="White"/>
            <ComboBoxItem Content="Синий" Tag="Blue"/>
            <ComboBoxItem Content="Зеленый" Tag="Green"/>
            <ComboBoxItem Content="Красный" Tag="Red"/>
        </ComboBox>

        <ComboBox x:Name="FontComboBox" SelectionChanged="FontComboBox_SelectionChanged" Width="200" Height="30" Margin="120,10,0,0">
            <ComboBoxItem Content="Arial" Tag="Arial"/>
            <ComboBoxItem Content="Times New Roman" Tag="Times New Roman"/>
            <ComboBoxItem Content="Courier New" Tag="Courier New"/>
        </ComboBox>

        <TextBox x:Name="textBox" TextWrapping="Wrap" AcceptsReturn="True" Margin="10,50,10,10"/>
    </Grid>
</Window>