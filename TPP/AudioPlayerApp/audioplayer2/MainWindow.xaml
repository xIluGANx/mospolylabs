<Window x:Class="audioplayer2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Аудиоплеер" Height="397" Width="400">
    <Grid>
        <StackPanel>
            <Button Name="btnLoad" Content="Загрузить аудио" Click="btnLoad_Click" Margin="10"/>
            <Button Name="btnPlay" Content="Воспроизвести" Click="btnPlay_Click" Margin="10"/>
            <Button Name="btnStop" Content="Остановить" Click="btnStop_Click" Margin="10"/>
            <Button Name="btnSavePlaylist" Content="Сохранить плейлист" Click="btnSavePlaylist_Click" Margin="10"/>
            <Button Name="btnOpenPlaylist" Content="Открыть плейлист" Click="btnOpenPlaylist_Click" Margin="10"/>
            <ListBox Name="lbPlaylist" Margin="10" Height="150"/>
        </StackPanel>
    </Grid>
</Window>
